.button1 {
  all: unset;
  display: flex;
  align-items: center;
  position: relative;
  padding: 0.5em 1.5em; /* Ajustado el padding */
  border: #9e2343 solid 0.15em;
  border-radius: 0.25em;
  color: #9e2343; /* Cambiado a #9e2343 */
  font-size: 1.2em; /* Tamaño de fuente más pequeño */
  font-weight: 600;
  cursor: pointer;
  overflow: hidden;
  transition: border 300ms, color 300ms;
  user-select: none;
    max-width:20%;
  margin-left: 40%;
}

.button1 p {
  z-index: 1;
}

.button1:hover {
  color: #9e2343; /* Cambiado a #9e2343 */
}

.button1:active {
  border-color: teal;
}

.button1::after,
.button1::before {
  content: "";
  position: absolute;
  width: 6em; /* Ajustado el tamaño del pseudo-elemento */
  aspect-ratio: 1;
  background: #9e2343; /* Cambiado a #9e2343 */
  opacity: 50%;
  border-radius: 50%;
  transition: transform 500ms, background 300ms;
}

.button1::before {
  left: 0;
  transform: translateX(-5em);
}

.button1::after {
  right: 0;
  transform: translateX(5em);
}

.button1:hover:before {
  transform: translateX(-0.5em);
}

.button1:hover:after {
  transform: translateX(0.5em);
}

.button1:active:before,
.button1:active:after {
  background: teal;
  
}

