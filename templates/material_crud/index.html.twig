{% extends 'base.html.twig' %}

{% block title %}Material index{% endblock %}

{% block body %}
    <style>
    body{
        background-color: #f4f4f4;
    }
        #capturas-section{
            
            padding:30px;
        }
        
        .button2{
            font-size: 1.2em;
            line-height: normal;
            text-align: center;
        }
        .btn-crea{
            font-size: 1.2em;
            background:#A02142;
            border: 2px solid #A02142;
            border-radius: 10px;
            text-decoration:none;
            color:white;
            font-family: 'Montserrat', sans-serif !important;
            font-weight: bold !important;
            padding:5px 30px;
            margin-left:5%;
        }
        .btn-crea:hover{
            background:transparent;
            border: 2px solid #A02142;
            color:#A02142;
        }
        .bodybotoon{
            margin-top: 10px;
        }
        .btn-2{
            font-family: 'Montserrat', sans-serif !important;
            font-weight: bold !important;
            display: inline;
            align-items: center;
            justify-content: center;
            text-align: center;
            position: relative;
            border: #9e2343 solid 0.12em;
            border-radius: 0.25em;
            color: #9e2343;
            background: #fff;
            font-size: .9em;
            font-weight: 600;
            cursor: pointer;
            overflow: hidden;
            transition: border 300ms, color 300ms;
            user-select: none;
            width: 30%;
            height: 40px;
            text-decoration: none;
            padding: 8px 20px;
            margin: auto;
        }
        .text-content h1{
            font-family: 'Montserrat', sans-serif !important;
            font-weight: bold !important;
            font-size: 4em;
            text-align: center;
            color:#681831;
            margin-top:2%;
        }

        /* Estilos personalizados para la tabla */
    .tabla-body {
        max-width: 90%;
        margin-left: 5%;
        margin-top: 20px; 
    }

    .table-red th, .table-red td {
        font-family: 'Montserrat', sans-serif !important;
        text-align: center !important; 
    }

    .table-red th {
        background-color: #A02142 !important;
        color: white !important;
        font-weight: bold !important;
        font-size: 1.2em !important;
    }

    .table-red td {
        font-size: 1em !important;
    }

    table.table-red {
        border-collapse: collapse !important;
        width: 100% !important;
        border-radius: 10px 10px 0 0 !important; 
        overflow: hidden !important; 
    }

    table.table-red th{
        border-bottom: 1px solid grey !important;
        border-right: 1px solid #E7E4E4 !important; 
        border-top: none !important; 
    }
    table.table-red td{
        border-bottom: 1px solid grey !important;
        border-top: none !important; 
    }

    /* DataTables - Personalización de la barra de búsqueda y de la paginación */

    .dataTables_wrapper .dataTables_paginate,
    .dt-paging {
        font-family: 'Montserrat', sans-serif !important;
        font-size: 1.5em !important;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button,
    .dt-paging-button {
        padding: 5px !important;
        font-family: 'Montserrat', sans-serif !important;
        font-size: .7em !important;
    }

    select[name="proyectoTable_length"]{
        border: 2px solid #BC955B !important; 
        padding: 2px 10px;
        border-radius: 15px !important;
        font-family: 'Montserrat', sans-serif !important;
        font-size: 1em !important;
        text-align: center !important;
        width: 60px !important;
    }
    .dt-search label{
        font-family: 'Montserrat', sans-serif !important;
        font-size:1.2em !important;
        font-weight:bold;
        display: none !important;
    }
    .dt-length label{
        font-family: 'Montserrat', sans-serif !important;
        font-size:1.2em !important;
        font-weight:normal;
    }
    .dt-input{
        
        border: 2px solid #BC955B !important; 
        padding: 2px 10px;
        border-radius: 15px !important;
        font-family: 'Montserrat', sans-serif !important;
        font-size: 1em !important;
        font-weight: normal !important;
    }
    </style>
   {% include 'components/navbar.html.twig' %}

    <div id="capturas-section">
        <div class="text-content">
            <h1>Material </h1>
        </div>
        <div class="bodybotoon">
            <a href="{{ path('app_material_crud_new') }}" class="btn-crea">Crear nuevo</a>
        </div>

        <div class="tabla-body">
    <table  class="table-red" id="materialTable">
      <thead >
        <tr>
          <th scope="col" >Id</th>
          <th scope="col" >Nombre</th>
          <th scope="col" >Descripción</th>
          <th scope="col" >Unidad de medida</th>
          <th scope="col" >Acciones</th> 
        </tr>
      </thead>
        <tbody>
        {% for material in materials %}
            <tr style="background-color: #ffffff;">
                <td scope="col" >{{ material.id }}</td>
                <td scope="col" >{{ material.nombre }}</td>
                <td scope="col" >{{ material.descripcion }}</td>
                <td scope="col" >{{ material.unidadMedida }}</td>
                <td scope="col" >
                
                    <a href="{{ path('app_material_crud_edit', {'id': material.id}) }}" class="btn-2">Editar</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" scope="col" style="background-color: #ffffff; padding: 10px; border: 1px solid #9e4323;">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
     </div>

 </div>
<script>
     $(document).ready( function () {
        $('#materialTable').DataTable();
    } );
</script>
{% endblock %}
