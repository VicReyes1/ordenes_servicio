<style>
.button {
  all: unset;
  display: flex;
  align-items: center;
  position: relative;
  padding: 0.5em 1.5em; /* Ajustado el padding */
  border: #9e2343 solid 0.15em;
  border-radius: 0.25em;
  color: #9e2343; /* Cambiado a #9e2343 */
  font-size: 1.2em; /* Tamaño de fuente más pequeño */
  font-weight: 600;
  cursor: pointer;
  overflow: hidden;
  transition: border 300ms, color 300ms;
  user-select: none;
}

.button p {
  z-index: 1;
}

.button:hover {
  color: #9e2343; /* Cambiado a #9e2343 */
}

.button:active {
  border-color: teal;
}

.button::after,
.button::before {
  content: "";
  position: absolute;
  width: 6em; /* Ajustado el tamaño del pseudo-elemento */
  aspect-ratio: 1;
  background: #9e2343; /* Cambiado a #9e2343 */
  opacity: 50%;
  border-radius: 50%;
  transition: transform 500ms, background 300ms;
}

.button::before {
  left: 0;
  transform: translateX(-5em);
}

.button::after {
  right: 0;
  transform: translateX(5em);
}

.button:hover:before {
  transform: translateX(-0.5em);
}

.button:hover:after {
  transform: translateX(0.5em);
}

.button:active:before,
.button:active:after {
  background: teal;
}

@keyframes animate {
    0%{
        transform: translateY(0) rotate(0deg);
        opacity: 1;
        border-radius: 0;
    }
    100%{
        transform: translateY(-1000px) rotate(720deg);
        opacity: 0;
        border-radius: 50%;
    }
}

