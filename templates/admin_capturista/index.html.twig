{% extends 'base.html.twig' %}

{% block body %}
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        #capturas-section {
            text-align: center;
            margin-top: 50px;
        }

        #capturas-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        #add-captura-button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        #add-captura-button:hover {
            background-color: #45a049;
        }
    </style>

    <div id="capturas-section">
        <h2 id="capturas-title">Capturas</h2>
        <button id="add-captura-button" onclick="alert('Agregar captura')">Agregar Captura</button>
    </div>
{% endblock %}
